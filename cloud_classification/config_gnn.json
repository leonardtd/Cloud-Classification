{
    "hardware": {
        "device": "cuda:3"
    },
    "data": {
        "path_dataset": "/data/ltorres",
        "path_save_weights": "/data/CLOUD_CLASSIFICATION_WEIGHTS",
        
        "resize": 224,
        "use_augmentation": true
    },
    "hyperparameters":{
        "epochs": 30,
        "batch_size": 32,

        "learning_rate": 0.0003,
        "early_stopping_tolerance": 5,
        
        "criterion": "cross_entropy",
        "optimizer": "adam",
        
        "use_scheduler": true,
        "lr_decay_steps": 15,
        "lr_decay_gamma": 1,
    },
    "model": {
        "hidden_dim": 512,
        "num_hidden": 2,
        "num_classes": 7,
        "conv_type": "gcn",
        "conv_parameters": {"num_heads":4, "residual": true, "agg":"mean"},
        "adjacency_builder": "cos_sim",
        "builder_parameter": 0.5,
        "use_both_heads": false
    }
}