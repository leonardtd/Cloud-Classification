{
    "hardware": {
        "device": "cuda:3"
    },
    "data": {
        "path_dataset": "/data/ltorres",
        "path_save_weights": "/data/ltorres/CLOUD_CLASSIFICATION_WEIGHTS",
        "path_save_logs": "/data/ltorres/model_logs",
        "class_names": ["1_cumulus", "2_altocumulus", "3_cirrus", "4_clearsky", "5_stratocumulus", "6_cumulonimbus", "7_mixed"],
        "resize": 224,
        "use_augmentation": true
    },
    "hyperparameters": {
        "epochs": 2,
        "batch_size": 32,
        "learning_rate": 0.0003,
        "early_stopping_tolerance": 5,
        "criterion": "cross_entropy",
        "optimizer": "adam",
        "use_scheduler": true,
        "lr_decay_steps": 15,
        "lr_decay_gamma": 1
    },
    "model": {
        "hidden_dim": 512,
        "num_hidden": 2,
        "num_classes": 7,
        "conv_type": "gcn",
        "conv_parameters": {"num_heads":4, "residual": true, "agg":"mean"},
        "adjacency_builder": "cos_sim",
        "builder_parameter": 0.7,
        "use_both_heads": false,
        "loss_lambda": 1
    }
}